<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:visibility="visible"
    tools:context=".AddingQuestions">

    <TextView
        android:id="@+id/friend_numberOfQuestionForYou"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="casual"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/friend_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:fontFamily="casual"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/friend_questionText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="casual"
        android:padding="3dp"
        android:textAlignment="center"
        android:textSize="24sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/friend_answerNumber1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="5dp"
            android:fontFamily="casual"
            tools:ignore="ButtonStyle" />

        <Button
            android:id="@+id/friend_answerNumber2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="5dp"
            android:fontFamily="casual"
            tools:ignore="ButtonStyle" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/friend_answerNumber3"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="5dp"
            android:fontFamily="casual"
            tools:ignore="ButtonStyle" />

        <Button
            android:id="@+id/friend_answerNumber4"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="5dp"
            android:fontFamily="casual"
            tools:ignore="ButtonStyle" />

    </LinearLayout>
    <TextView
        android:id="@+id/correctAnswers"
        android:fontFamily="casual"
        android:text="@string/correct_answers_0"
        android:textColor="@color/green"
        android:textSize="12sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/wrongAnswers"
        android:fontFamily="casual"
        android:text="@string/wrong_answers_0"
        android:textColor="@color/red"
        android:textSize="12sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/friend_addQuestion"
        android:layout_width="108dp"
        android:layout_height="35dp"
        android:layout_margin="10dp"
        android:background="@color/colorPrimaryDark"
        android:fontFamily="casual"
        android:text="@string/next_question"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:visibility="invisible" />


</LinearLayout>